{% extends '::backendbase.html.twig' %}
{% block title %}Qrcode Control{% endblock %}
{% block navqrcode %}navactive{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="/source/change/js/qrcode.js"></script>
{% endblock %}

{% block maincontent %}
<div class="panel panel-default mainmanage" id="qrcodemanage">
   <div class="panel-heading">
         Qrcode Control
   </div>
   <div class="panel-body mainmanagepanel" id="qrcodemanagepanel">
     <ul class="nav nav-tabs navselect" style="margin-top:20px" id="qrcodenav">
       <li class="active"><a href="#" active="qrcodelist" class="message">Qrcode List</a></li>
       <li class=""><a href="#" active="addqrcode" class="message">Add Qrcode</a></li>
    </ul>
<div id="qrcodelist"  class="navshow navhide">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Qrcode List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="qrcodelisttable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Scene Id</th>
                                    <th>Scan Times</th>
                                    <th>Subscribe Times</th>
                                    <th>Qrcode</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>


<div id="addqrcode" class="navhide">
  <button type="button" class="btn btn-primary pull-right" id="addqrcodesubmit">
     Submit
  </button>
  <div class="form-group">
    <label>NAME:</label>
    <input class="form-control qrcodename" placeholder="Enter NAME" style="width:80%">
  </div>
  <div class="form-group">
    <label>Scene Id:</label>
    <input class="form-control qrcodeid" type="number" min="1" max="100000" onkeyup="value=value.replace(/[^\d{1,}\.\d{1,}|\d{1,}]/g,'')" placeholder="Enter 1~100000" style="width:300px">
  </div>
  <div class="form-group messagediv">
    <label>Feedback Message:</label><br>
    <div class="btn-group btn-group-sm buttontype">
      <button type="button" class="btn btn-default" MsgType="news" action="textmessage">TEXT MESSAGE</button>
      <button type="button" class="btn btn-default" MsgType="text" action="pushmessage">PUSH MESSAGE</button>
      <button type="button" class="btn btn-default" MsgType="text" action="none">None</button>
    </div>
    <div class="pushmessage sonshow">

    </div>
    <div class="textmessage sonshow">

    </div>
  </div>
</div>


<div id="editqrcode" class="navhide">
  <div class="panel panel-default">
     <div class="panel-heading">
           Edit Qrcode
           <i class="fa fa-mail-reply pull-right"></i>
     </div>
     <div class="panel-body" id="editqrcodepanel">
       <button type="button" class="btn btn-primary pull-right" id="editqrcodesubmit">
          Save
       </button>
       <div class="form-group">
         <label>NAME:</label>
         <input class="form-control qrcodename" placeholder="Enter NAME" style="width:80%">
       </div>
       <div class="form-group messagediv">
         <label>Feedback Message:</label><br>
         <div class="btn-group btn-group-sm buttontype">
           <button type="button" class="btn btn-default" MsgType="news" action="textmessage">TEXT MESSAGE</button>
           <button type="button" class="btn btn-default" MsgType="text" action="pushmessage">PUSH MESSAGE</button>
           <button type="button" class="btn btn-default" MsgType="text" action="none">None</button>
         </div>
         <div class="pushmessage sonshow">

         </div>
         <div class="textmessage sonshow">

         </div>
       </div>
    </div>
  </div>
</div>

   </div>
</div>



<script>
$(document).ready(function() {
 qrcode.ajaxloadlist();
});
</script>
{% endblock %}
