{% extends '::backendbase.html.twig' %}
{% block title %}Jssdk Control{% endblock %}
{% block navjssdk %}navactive{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    var pagecode = {
      hosts: "{{host}}",
    }
  </script>
{% endblock %}

{% block maincontent %}
<div class="panel panel-default" id="jssdkmanage">
   <div class="panel-heading">
         Jssdk Control
   </div>
   <div class="panel-body" id="jssdkmanagepanel">
     <ul class="nav nav-tabs" style="margin-top:20px" id="jssdknav">
       <li class="active"><a href="#" active="jssdklist" class="message">Jssdk List</a></li>
       <li class=""><a href="#" active="addjssdk" class="message">Add Jssdk</a></li>
    </ul>
<div id="jssdklist"  class="navshow">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Jssdk List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="jssdklisttable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Js link</th>
                                    <th>Editor</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>


<div id="addjssdk">
  <button type="button" class="btn btn-primary pull-right" id="addjssdksubmit">
     Submit
  </button>
  <div class="form-group">
    <label>NAME:</label>
    <input class="form-control jssdkname" placeholder="Enter NAME" style="width:80%">
  </div>
  <div class="form-group">
    <label>DOMAIN:</label>
    <input class="form-control jssdkdomain" placeholder="Enter DOMAIN" style="width:80%">
  </div>
  <!-- <div class="form-group">
    <label>Your wx.config:</label>
    <textarea class="form-control jssdconfig" style="width:80%;height:500px"></textarea>
  </div> -->
</div>


<div id="editjssdk">
  <div class="panel panel-default">
     <div class="panel-heading">
           Edit Page
           <i class="fa fa-mail-reply pull-right"></i>
     </div>
     <div class="panel-body" id="editjssdkpanel">
       <button type="button" class="btn btn-primary pull-right" id="editjssdksubmit">
          Save
       </button>
       <div class="form-group">
         <label>NAME:</label>
         <input class="form-control jssdkname" placeholder="Enter NAME" style="width:80%">
       </div>
       <div class="form-group">
         <label>DOMAIN:</label>
         <input class="form-control jssdkdomain" placeholder="Enter DOMAIN" style="width:80%">
       </div>
       <!-- <div class="form-group">
         <label>Your wx.config:</label>
         <textarea class="form-control jssdconfig" style="width:80%;height:500px"></textarea>
       </div> -->
    </div>
  </div>
</div>

   </div>
</div>



